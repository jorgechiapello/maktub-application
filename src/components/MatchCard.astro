---
interface Props {
  match: {
    name: string;
    bio: string;
    interests: string[];
    imageUrl: string;
    compatibility: number;
  };
  isPremium: boolean;
}

const { match, isPremium } = Astro.props;
const { name, bio, interests, imageUrl, compatibility } = match;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-[1.02] transition-transform duration-300">
  <div class="relative">
    <img
      src={imageUrl}
      alt={name}
      class="w-full h-48 object-cover"
    />
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-4">
      <div class="flex justify-between items-end">
        <h3 class="text-xl font-semibold text-white">{name}</h3>
        <span class="text-white bg-primary px-2 py-1 rounded-full text-sm">
          {compatibility}% Match
        </span>
      </div>
    </div>
  </div>

  <div class="p-4 space-y-4">
    <p class="text-gray-600">{bio}</p>

    <div class="flex flex-wrap gap-2">
      {interests.map((interest) => (
        <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
          {interest}
        </span>
      ))}
    </div>

    <div class="flex gap-2 pt-4 border-t">
      <button
        class:list={[
          "flex-1 flex items-center justify-center gap-2 px-4 py-2 rounded-lg",
          isPremium 
            ? "bg-primary text-white hover:bg-primary-dark cursor-pointer"
            : "bg-gray-100 text-gray-400 cursor-not-allowed"
        ]}
        disabled={!isPremium}
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 0 1-2.555-.337A5.972 5.972 0 0 1 5.41 20.97a5.969 5.969 0 0 1-.474-.065 4.48 4.48 0 0 0 .978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25Z" />
        </svg>
        {isPremium ? 'Message' : 'Premium Only'}
      </button>

      <button
        class="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-secondary text-white rounded-lg hover:bg-gray-800"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
        </svg>
        Schedule
      </button>
    </div>
  </div>
</div>
