---
interface Props {
  message?: string;
}

const { message = "Cargando..." } = Astro.props;
---

<div class="flex flex-col items-center justify-center h-[70vh] relative overflow-hidden">
  <!-- Floating background hearts -->
  <div class="floating-hearts-container">
    <div class="floating-heart fh1"></div>
    <div class="floating-heart fh2"></div>
    <div class="floating-heart fh3"></div>
    <div class="floating-heart fh4"></div>
    <div class="floating-heart fh5"></div>
    <div class="floating-heart fh6"></div>
  </div>
  
  <!-- Main pulsing heart animation -->
  <div class="love-loading-container">
    <div class="heart heart1"></div>
    <div class="heart heart2"></div>
    <div class="heart heart3"></div>
  </div>
  {message && <p class="mt-6 text-lg font-medium text-gray-700 text-center relative z-10">{message}</p>}
</div>

<style>
  .love-loading-container {
    position: relative;
    width: 100px;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
  }
  
  /* Main pulsing heart styles */
  .heart {
    position: absolute;
    width: 50px;
    height: 50px;
    background-color: theme('colors.primary');
    transform: rotate(45deg);
    animation: pulse 1.5s ease-in-out infinite;
    box-shadow: 0 0 15px rgba(255, 105, 180, 0.3);
  }
  
  .heart:before,
  .heart:after {
    content: "";
    position: absolute;
    width: 50px;
    height: 50px;
    background-color: theme('colors.primary');
    border-radius: 50%;
  }
  
  .heart:before {
    top: -25px;
    left: 0;
  }
  
  .heart:after {
    top: 0;
    left: -25px;
  }
  
  .heart1 {
    opacity: 0.9;
    transform: rotate(45deg) scale(0.8);
    animation-delay: 0s;
  }
  
  .heart2 {
    opacity: 0.7;
    transform: rotate(45deg) scale(0.6);
    animation-delay: 0.5s;
  }
  
  .heart3 {
    opacity: 0.5;
    transform: rotate(45deg) scale(0.4);
    animation-delay: 1s;
  }
  
  /* Floating background hearts */
  .floating-hearts-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
  }
  
  .floating-heart {
    position: absolute;
    width: 20px;
    height: 20px;
    background-color: rgba(255, 105, 180, 0.2);
    transform: rotate(45deg);
    animation: float 15s linear infinite;
  }
  
  .floating-heart:before,
  .floating-heart:after {
    content: "";
    position: absolute;
    width: 20px;
    height: 20px;
    background-color: rgba(255, 105, 180, 0.2);
    border-radius: 50%;
  }
  
  .floating-heart:before {
    top: -10px;
    left: 0;
  }
  
  .floating-heart:after {
    top: 0;
    left: -10px;
  }
  
  .fh1 {
    left: 10%;
    top: -5%;
    animation-duration: 12s;
    animation-delay: 0s;
    opacity: 0.7;
  }
  
  .fh2 {
    left: 30%;
    top: -10%;
    animation-duration: 18s;
    animation-delay: 1s;
    opacity: 0.5;
    transform: rotate(45deg) scale(1.5);
  }
  
  .fh3 {
    left: 50%;
    top: -15%;
    animation-duration: 15s;
    animation-delay: 2s;
    opacity: 0.6;
    transform: rotate(45deg) scale(0.8);
  }
  
  .fh4 {
    left: 70%;
    top: -5%;
    animation-duration: 20s;
    animation-delay: 0.5s;
    opacity: 0.4;
    transform: rotate(45deg) scale(1.2);
  }
  
  .fh5 {
    left: 85%;
    top: -10%;
    animation-duration: 17s;
    animation-delay: 1.5s;
    opacity: 0.5;
    transform: rotate(45deg) scale(0.9);
  }
  
  .fh6 {
    left: 20%;
    top: -8%;
    animation-duration: 14s;
    animation-delay: 3s;
    opacity: 0.6;
    transform: rotate(45deg) scale(1.1);
  }
  
  @keyframes pulse {
    0% {
      transform: rotate(45deg) scale(1);
    }
    50% {
      transform: rotate(45deg) scale(1.3);
    }
    100% {
      transform: rotate(45deg) scale(1);
    }
  }
  
  @keyframes float {
    0% {
      transform: rotate(45deg) translateY(0) translateX(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 0.5;
    }
    100% {
      transform: rotate(45deg) translateY(1000%) translateX(100px);
      opacity: 0;
    }
  }
</style>
