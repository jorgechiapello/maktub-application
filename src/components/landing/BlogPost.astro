---
import NewsletterInvite from '@components/landing/NewsletterInvite.astro'
import SocialLinks from '@components/landing/SocialLinks.astro'
import RelatedPostSection from '@components/landing/RelatedPostSection.astro'
import PageTitle from './PageTitle.astro'

const { pageTitle, siteUrl, publishDate, srcImage, altImage } = Astro.props

const formattedDate = publishDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
})
---

<article class="flex flex-col gap-8">
  <header class="py-8 border-b border-gray-200 mb-8">
    <PageTitle>{pageTitle}</PageTitle>
    <div class="flex justify-between">
      <time
        datetime={publishDate.toISOString()}
        class="flex items-center gap-2 text-sm text-gray-500"
      >
        <i class="fas fa-calendar text-red-500"></i>
        {formattedDate}
      </time>
      <SocialLinks />
    </div>
  </header>
  <img
    fetchpriority="high"
    width="1820"
    height="1024"
    src={srcImage}
    alt={altImage}
    class="w-full h-auto block mx-auto md:rounded-lg"
  />
  <div class="py-8 text-lg leading-relaxed">
    <slot />
    <div class="mt-12 pt-8 border-t">
      <h5 class="text-xl font-semibold mb-4">
        Comparte este posteo
      </h5>
      <SocialLinks />
    </div>
  </div>

  <NewsletterInvite />
  <RelatedPostSection />
</article>
