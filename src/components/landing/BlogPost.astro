---
import NewsletterInvite from '@components/landing/NewsletterInvite.astro';
import SocialLinks from '@components/landing/SocialLinks.astro';
import RelatedPostSection from '@components/landing/RelatedPostSection.astro';

const { pageTitle, siteUrl, publishDate, srcImage, altImage } = Astro.props;

const formattedDate = publishDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const shareText = encodeURIComponent(pageTitle);
const pageUrl = new URL(Astro.url.pathname, siteUrl).toString();
const shareUrl = encodeURIComponent(pageUrl);
---

<article class="flex flex-col gap-8">
  <header class="post-header">
    <h1 class="post-title">{pageTitle}</h1>
    <div class="post-meta flex justify-between">
      <time datetime={publishDate.toISOString()} class="post-date">
        <i class="fas fa-calendar"></i>
        {formattedDate}
      </time>
      <SocialLinks shareUrl={shareUrl} shareText={shareText} />
    </div>
  </header>
  <div class="post-image">
    <img
      fetchpriority="high"
      width="1820"
      height="1024"
      src={srcImage}
      alt={altImage}
    />
  </div>
  <div class="post-content">
    <slot />

    <div class="share-section">
      <h5 class="share-heading">Comparte este posteo</h5>
      <SocialLinks shareUrl={shareUrl} shareText={shareText} />
    </div>
  </div>

  <RelatedPostSection />
  <NewsletterInvite />
</article>
<style>
  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .post-date i {
    font-size: 1rem;
    color: #666;
  }
  .post-image {
    margin-bottom: 2rem;
  }
  .post-image img {
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .share-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }

  .share-heading {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .post-image {
      margin: 1.5rem 0;
      border-radius: 8px;
    }

    .post-header {
      padding: 1.5rem 0;
    }

    .post-title {
      font-size: 1.75rem;
    }

    .post-content {
      padding: 1.5rem 0;
    }
  }

  .post-header {
    padding: 2rem 0;
    border-bottom: 1px solid #eee;
    margin-bottom: 2rem;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #666;
    font-size: 0.875rem;
  }

  .post-date i {
    color: #ff0000;
  }

  .post-content {
    padding: 2rem 0;
    font-size: 1.125rem;
    line-height: 1.8;
    color: #444;
  }

  .post-content p {
    margin-bottom: 1.5rem;
  }

  .post-content p:last-child {
    margin-bottom: 0;
  }
</style>
