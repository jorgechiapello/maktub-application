---
const { title, categoryTitle, image, postId, categoryId, excerpt } = Astro.props;

const categoryUrl = `/blog/${categoryId}`
const url = `${categoryUrl}/${postId}`
---

<article class="related-post">
  <a href={url} class="related-post-image">
    <img width="1820" height="1024" src={image} alt={title} loading="lazy" />
  </a>
  <div class="related-post-category">
    <a href={categoryUrl}>{categoryTitle}</a>
  </div>
  <h5 class="related-post-title">
    <a href={url}>
      {title}
    </a>
  </h5>
  <div class="related-post-excerpt">
    <p>
      {excerpt}
    </p>
  </div>
  <a
    href={url}
    class="related-post-link"
    aria-label={`Leer más sobre ${title}`}
  >
    Leer más <i class="fas fa-angle-right" aria-hidden="true"></i>
  </a>
</article>
<style>
  .related-post {
    display: flex;
    flex-direction: column;
  }

  .related-post-image {
    margin-bottom: 1rem;
    overflow: hidden;
    border-radius: 8px;
  }

  .related-post-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .related-post-image:hover img {
    transform: scale(1.05);
  }

  .related-post-category {
    margin-bottom: 0.5rem;
  }

  .related-post-category a {
    color: #ff0000;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .related-post-category a:hover {
    color: #cc0000;
  }

  .related-post-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .related-post-title a {
    color: #333;
    text-decoration: none;
    transition: color 0.2s;
  }

  .related-post-title a:hover {
    color: #ff0000;
  }

  .related-post-excerpt {
    color: #666;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .related-post-link {
    color: #ff0000;
    text-decoration: none;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
  }

  .related-post-link:hover {
    color: #cc0000;
  }

  .related-post-link i {
    font-size: 0.875rem;
  }
  @media (max-width: 768px) {
    .related-post-title {
      font-size: 1.125rem;
    }
  }
</style>
