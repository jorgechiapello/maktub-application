---
interface Props {
  name: string;
  role: string;
  content: string;
  imageSrc: string;
}

const { name, role, content, imageSrc } = Astro.props;

import StarIcon from '../icons/StarIcon.astro';
---

<div class="relative flex flex-col gap-6 rounded-2xl bg-white p-6 ring-1 ring-gray-200">
  <div class="flex items-center gap-x-1">
    <StarIcon />
    <StarIcon />
    <StarIcon />
    <StarIcon />
    <StarIcon />
  </div>
  <p class="text-gray-700">{content}</p>
  <div class="flex items-center gap-x-4 mt-auto pt-4 border-t border-gray-100">
    <img src={imageSrc} alt={`Photo of ${name}`} class="h-10 w-10 rounded-full bg-gray-100">
    <div>
      <div class="font-semibold">{name}</div>
      <div class="text-gray-600">{role}</div>
    </div>
  </div>
</div>
