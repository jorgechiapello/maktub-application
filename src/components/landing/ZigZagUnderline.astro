<style>
.zigzag-underline {
  position: relative;
  display: inline-block;
  height: 50px;
}

.zigzag-underline::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -5px;
  width: 100%;
  height: 40px;
  pointer-events: none;
}

.zigzag-underline svg {
  position: absolute;
  left: -10px;
  right: -10px;
  bottom: 0px;
  width: calc(100% + 20px);
  height: 70px;
}

.zigzag-underline path {
  fill: none;
  stroke: currentColor;
  stroke-width: 7;
  stroke-linecap: round;
  opacity: 0.8;
  animation: drawPath 33s linear infinite;
}

@keyframes drawPath {
  0%, 100% {
    stroke-dasharray: 0 1500;
    stroke-dashoffset: 0;
  }
  3% {
    stroke-dasharray: 1500 1500;
    stroke-dashoffset: 0;
  }
  3.1%, 90% {
    stroke-dasharray: 1500 1500;
    stroke-dashoffset: 0;
  }
}
</style>
