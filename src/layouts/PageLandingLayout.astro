---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import { ViewTransitions } from 'astro:transitions';
import Footer from '@components/landing/Footer.astro';
import NavigationBar from '@components/landing/NavigationBar.astro';  
import Breadcrumbs from '@components/landing/Breadcrumbs.astro'

const { title, href } = Astro.props;
---

<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Maktub</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="canonical" href={href} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- <style>
      html, body {
        /* font-family: 'Montserrat', sans-serif; */
      }
      .font-amiri {
        font-family: 'Amiri', serif;
      }
      h2 {
        font-family: 'Amiri', serif;
      }
    </style> -->
  </head>
  <body>
    <NavigationBar />
    <div class="max-w-[1200px] mx-auto">
      <Breadcrumbs/>
      <slot />
    </div>
    <Footer />
  </body>
</html>
