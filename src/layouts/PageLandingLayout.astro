        gap: 1rem;
      }
      .footer-social a {
        color: #333;
        text-decoration: none;
      }
      .footer-social a:hover {
        color: #666;
      }

      @media (max-width: 768px) {
          .footer-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
          }
          .footer-bottom {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
          }
