---
import MainLayout from '@layouts/AppMainLayout.astro';

const conversations = [
    {
        id: 1,
        name: 'Alex Rivera',
        lastMessage: '¡Suena genial! ¿Cuándo estás libre?',
        timestamp: 'hace 2 min',
        unread: true,
    },
    {
        id: 2,
        name: 'Sarah Chen',
        lastMessage: '¡A mí también me encanta esa cafetería!',
        timestamp: 'hace 1 hora',
        unread: false,
    }
];
---

<MainLayout title="Tus Conversaciones">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-3xl font-bold mb-8 text-gray-900">Tus Conversaciones</h1>
            <div class="space-y-4">
                {conversations.map((conversation) => (
                    <div class="bg-primary rounded-lg shadow hover:shadow-lg hover:bg-primary/90 transition-all duration-200 p-4 cursor-pointer">
                        <a href={`/app/conversation-${conversation.id}`} class="block">
                            <div class="flex items-center">
                                <div class="flex-grow">
                                    <div class="flex items-center gap-2">
                                        <h3 class="font-semibold text-white">{conversation.name}</h3>
                                        {conversation.unread && (
                                            <span class="bg-white/20 text-white text-xs px-2 py-0.5 rounded-full">Nuevo</span>
                                        )}
                                    </div>
                                    <p class="text-white/90 text-sm">{conversation.lastMessage}</p>
                                </div>
                                <div class="text-sm text-white/80">
                                    {conversation.timestamp}
                                </div>
                            </div>
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </main>
</MainLayout>
