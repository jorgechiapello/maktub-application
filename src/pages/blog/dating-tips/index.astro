---
import PageLandingLayout from '@layouts/PageLandingLayout.astro'
import Breadcrumbs from '@components/landing/Breadcrumbs.astro'
import BlogPreview from '@components/landing/BlogPreview.astro'

import { blogUnlockingLove } from '@data/blogs'
---

<PageLandingLayout>
  <Breadcrumbs
    items={[
      { label: 'Inicio', path: '/' },
      { label: 'Blog', path: '/blog' },
      { label: 'Dating tips', path: '/dating-tips/' },
    ]}
  />
  <BlogPreview
    title={blogUnlockingLove.title}
    categoryTitle={blogUnlockingLove.categoryTitle}
    categoryId={blogUnlockingLove.categoryId}
    image={blogUnlockingLove.image}
    postId={blogUnlockingLove.postId}
    excerpt={blogUnlockingLove.excerpt}
  />
</PageLandingLayout>
