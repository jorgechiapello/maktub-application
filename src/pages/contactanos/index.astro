---
import '@fortawesome/fontawesome-free/css/all.min.css'
import PageLandingLayout from '@layouts/PageLandingLayout.astro'
---

<PageLandingLayout title="Contactanos" href="/contactanos/">
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="pr-8">
        <form method="post" name="Contact Us" class="space-y-6">
          <input type="hidden" name="post_id" value="1605" />
          <input type="hidden" name="form_id" value="5c3zmdu7" />
          <input type="hidden" name="referer_title" value="Contactanos" />
          <input type="hidden" name="queried_id" value="1605" />

          <div class="space-y-4">
            <div class="space-y-2">
              <h3 class="text-3xl font-bold text-gray-900">Contactanos</h3>
              <p class="text-gray-600">
                Contactanos para cualquier inquietud o dirección.
              </p>
            </div>
            <div class="space-y-1">
              <label
                for="form-field-name"
                class="block text-sm font-medium text-gray-700"
              >
                Nombre
              </label>
              <input
                type="text"
                name="form_fields[name]"
                id="form-field-name"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                placeholder="Escribe tu nombre"
                required
                aria-required="true"
              />
            </div>
            <div class="space-y-1">
              <label
                for="form-field-email"
                class="block text-sm font-medium text-gray-700"
              >
                Email
              </label>
              <input
                type="email"
                name="form_fields[email]"
                id="form-field-email"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                placeholder="Escribe tu email"
                required
                aria-required="true"
              />
            </div>
            <div class="space-y-1">
              <label
                for="form-field-message"
                class="block text-sm font-medium text-gray-700"
              >
                Mensaje
              </label>
              <textarea
                name="form_fields[message]"
                id="form-field-message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                placeholder="Escribe tu mensaje"
                required
                aria-required="true"></textarea>
            </div>
            <div class="flex items-center space-x-2">
              <input
                type="checkbox"
                name="form_fields[acceptance]"
                id="form-field-acceptance"
                class="h-6 w-6 text-primary focus:ring-primary border-gray-300 rounded"
                required
                aria-required="true"
              />
              <label for="form-field-acceptance" class="text-md text-gray-600">
                Acepto los términos y condiciones
              </label>
            </div>
            <div class="flex space-x-4">
              <button
                type="submit"
                class="flex-1 bg-primary text-white px-6 py-2 rounded-md hover:bg-primary/80 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
              >
                Enviar
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="h-full min-h-[400px] rounded-lg overflow-hidden shadow-lg">
        <iframe
          loading="lazy"
          class="w-full h-full border-0"
          src="https://maps.google.com/maps?q=La%20Antiga%20Esquerra%20de%20l'Eixample%2C%20Barcelona%2C%20Spain&t=m&z=15&output=embed&iwloc=near"
          title="La Antiga Esquerra de l'Eixample, Barcelona, Spain"
          aria-label="La Antiga Esquerra de l'Eixample, Barcelona, Spain"
        >
        </iframe>
      </div>
    </div>
  </div>
</PageLandingLayout>
