---
import MainLayout from '../layouts/MainLayout.astro';
import LeftArrow from '../components/LeftArrow.astro';
import ConversationChat from '../components/ConversationChat.astro';

const predefinedMessages = [
    '¡Hola! Me encantó tu perfil',
    'Me gustaría conocerte mejor',
    '¿Te gustaría tomar un café?',
    '¿Cuándo estás libre?',
    'Me parece genial',
    'Gracias por tu mensaje'
];

const conversation = {
    id: 1,
    name: 'Alex Rivera',
    messages: [
        { id: 1, sender: 'Alex', content: '¡Hola! ¡Vi que hicimos match!', timestamp: '10:30 AM' },
        { id: 2, sender: 'You', content: '¡Hola Alex! ¡Sí, me encantó tu perfil!', timestamp: '10:32 AM' },
        { id: 3, sender: 'Alex', content: '¡Gracias! ¿Te gustaría tomar un café algún día?', timestamp: '10:35 AM' },
        { id: 4, sender: 'You', content: '¡Me parece genial! ¿Cuándo estás libre?', timestamp: '10:36 AM' },
    ]
};
---

<MainLayout title={`Chat con ${conversation.name}`}>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="flex items-center mb-6">
                <LeftArrow href="/conversations" />
                <h1 class="text-2xl font-bold text-gray-900">Chat con {conversation.name}</h1>
            </div>
            
            <ConversationChat
                messages={conversation.messages}
                predefinedMessages={predefinedMessages}
            />
        </div>
    </main>
</MainLayout>
