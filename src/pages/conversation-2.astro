---
import MainLayout from '../layouts/MainLayout.astro';
import LeftArrow from '../components/LeftArrow.astro';

const conversation = {
    id: 2,
    name: 'Sarah Chen',
    messages: [
        { id: 1, sender: 'Sarah', content: 'Hi! I noticed you like photography too!', timestamp: '9:15 AM' },
        { id: 2, sender: 'You', content: 'Yes! I love taking photos of nature and cityscapes', timestamp: '9:20 AM' },
        { id: 3, sender: 'Sarah', content: 'There\'s this amazing coffee shop downtown with a great view of the city. Perfect for photography!', timestamp: '9:22 AM' },
        { id: 4, sender: 'You', content: 'I love that coffee shop too!', timestamp: '9:25 AM' },
    ]
};
---

<MainLayout title={`Chat with ${conversation.name}`}>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="flex items-center mb-6">
                <LeftArrow href="/conversations" />
                <h1 class="text-2xl font-bold text-gray-900">Chat with {conversation.name}</h1>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="space-y-4 mb-6 max-h-[500px] overflow-y-auto">
                    {conversation.messages.map((message) => (
                        <div class:list={[
                            'flex',
                            message.sender === 'You' ? 'justify-end' : 'justify-start'
                        ]}>
                            <div class:list={[
                                'max-w-[70%] rounded-lg p-3',
                                message.sender === 'You' 
                                    ? 'bg-primary text-white' 
                                    : 'bg-gray-100 text-gray-900'
                            ]}>
                                <p>{message.content}</p>
                                <p class:list={[
                                    'text-xs mt-1',
                                    message.sender === 'You' 
                                        ? 'text-primary-100' 
                                        : 'text-gray-500'
                                ]}>{message.timestamp}</p>
                            </div>
                        </div>
                    ))}
                </div>
                
                <div class="mt-4">
                    <form class="flex gap-2">
                        <input 
                            type="text" 
                            placeholder="Type your message..." 
                            class="flex-grow p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        />
                        <button 
                            type="submit"
                            class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
                        >
                            Send
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</MainLayout>
