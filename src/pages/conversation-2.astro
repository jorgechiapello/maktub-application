---
import MainLayout from '../layouts/MainLayout.astro';
import LeftArrow from '../components/LeftArrow.astro';
import ConversationChat from '../components/ConversationChat.astro';

const predefinedMessages = [
    '¡Me encanta la fotografía!',
    'Esa cafetería suena increíble',
    '¿Podríamos quedar allí?',
    '¿Qué tipo de fotografía te gusta más?',
    'Me encantaría ver tus fotos',
    'Gracias por compartir'
];

const conversation = {
    id: 2,
    name: 'Sarah Chen',
    messages: [
        { id: 1, sender: 'Sarah', content: '¡Hola! ¡Noté que a ti también te gusta la fotografía!', timestamp: '9:15 AM' },
        { id: 2, sender: 'You', content: '¡Sí! Me encanta tomar fotos de la naturaleza y paisajes urbanos', timestamp: '9:20 AM' },
        { id: 3, sender: 'Sarah', content: 'Hay una cafetería increíble en el centro con una vista espectacular de la ciudad. ¡Perfecta para la fotografía!', timestamp: '9:22 AM' },
        { id: 4, sender: 'You', content: '¡También me encanta esa cafetería!', timestamp: '9:25 AM' },
    ]
};
---

<MainLayout title={`Chat con ${conversation.name}`}>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="flex items-center mb-6">
                <LeftArrow href="/conversations" />
                <h1 class="text-2xl font-bold text-gray-900">Chat con {conversation.name}</h1>
            </div>
            
            <ConversationChat
                messages={conversation.messages}
                predefinedMessages={predefinedMessages}
            />
        </div>
    </main>
</MainLayout>
