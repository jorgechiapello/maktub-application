---
import MainLayout from '../layouts/MainLayout.astro';

const userProfile = {
    name: 'Loading...',
    answers: []
};
---

<MainLayout title="Your Profile">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold text-gray-900 mb-8">Your Profile</h1>
            
            <div class="space-y-8">
                <section>
                    <h2 class="text-xl font-semibold mb-4 text-gray-900 border-b border-gray-200 pb-2">Personal Information</h2>
                    <div class="space-y-4">
                        <div>
                            <label class="font-medium text-gray-700 block mb-1">Name</label>
                            <p id="user-name" class="text-lg text-gray-900">{userProfile.name}</p>
                        </div>
                    </div>
                </section>

                <section>
                    <h2 class="text-xl font-semibold mb-4 text-gray-900 border-b border-gray-200 pb-2">Your Preferences</h2>
                    <div id="preference-answers-container" class="space-y-6">
                        <!-- Preference answers will be loaded here by JavaScript -->
                    </div>
                </section>
            </div>
        </div>
    </main>
</MainLayout>

<script>
  // Function to load user info from localStorage
  function loadUserInfo() {
    const userOnboarding = JSON.parse(localStorage.getItem('userOnboarding') || '{}');
    const nameElement = document.getElementById('user-name');
    if (nameElement) {
      nameElement.textContent = userOnboarding.name || 'Guest';
    }
  }

  // Function to load answers from localStorage
  function loadAnswers() {
    interface PreferenceAnswer {
      question: string;
      answer: string;
    }

    const preferenceAnswers: PreferenceAnswer[] = JSON.parse(localStorage.getItem('preferenceAnswers') || '[]');
    console.log(preferenceAnswers);
    const preferenceContainer = document.getElementById('preference-answers-container');
    
    if (preferenceContainer && preferenceAnswers.length > 0) {
      const answersHtml = preferenceAnswers.map((item: PreferenceAnswer) => `
        <div class="group">
          <h3 class="font-medium text-gray-900">${item.question}</h3>
          <p class="mt-2 text-gray-700 text-lg">${item.answer}</p>
        </div>
      `).join('');
      
      preferenceContainer.innerHTML = answersHtml;
    }
  }

  // Load answers when the page loads
  document.addEventListener('DOMContentLoaded', () => {
    loadUserInfo();
    loadAnswers();
  });
</script>

<style>
  .answer-item {
    margin-bottom: 1.5rem;
  }

  .question {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .answer {
    color: #666;
  }
</style>
